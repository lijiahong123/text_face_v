.btn-box {
    display: flex;
    justify-content: space-around;
    position: absolute;
    bottom: 20px;
    left: 0;
    width: 100%;
    z-index: 2;
}

.btn-box cover-image {
    width: 50px;
    height: 50px;
    opacity: 0.7;
}

.choose-btn {
    width: 200rpx;
    height: 100rpx;
    background-color: #42e6a4;
    border-radius: 5px;
    position: fixed;
    bottom: 20px;
    left: 50%;
    padding: 10px;
    margin: 0;
    transform: translateX(-50%);
}

.face-box-position {
    position: fixed;
    width: 80%;
    left: 50%;
    top: 50%;
    height: 375rpx;
    transform: translate(-50%, -50%);
    background-color: rgba(0, 0, 0, 0.7);
    font-size: 20px;
    color: #fff;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
}
.face-box-position view {
    display: flex;
    justify-content: space-around;
}